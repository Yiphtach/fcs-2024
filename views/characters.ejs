<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>  <!-- Include the header partial -->
    <title>Character List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        h1 {
            font-size: 36px;
            margin-bottom: 20px;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }
        tbody tr:nth-child(even) {
            background-color: #fff;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            text-align: center;
        }
        .btn:hover {
            background-color: #45a049;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
            justify-content: center;
        }
        .action-buttons form {
            display: inline;
        }
        .action-buttons button, .action-buttons a {
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .action-buttons button:hover, .action-buttons a:hover {
            background-color: #45a049;
        }
        /* Responsive Design */
        @media (max-width: 768px) {
            table, thead, tbody, th, td, tr {
                display: block;
            }
            th {
                text-align: left;
            }
            tbody tr {
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>
    <h1>Character List</h1>

    <!-- Character List Table -->
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Universe</th>
                <th>Strength</th>
                <th>Speed</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>Total Fights</th>
                <th>Win Ratio</th>
                <th>Loss Ratio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% characters.forEach(character => { %>
                <tr>
                    <td><%= character.name %></td>
                    <td><%= character.universe %></td>
                    <td><%= character.stats.strength %></td>
                    <td><%= character.stats.speed %></td>
                    <td><%= character.wins %></td>
                    <td><%= character.losses %></td>
                    <td><%= character.totalFights %></td>
                    <td><%= character.winRatio %></td>  <!-- Display win ratio virtual field -->
                    <td><%= character.lossRatio %></td> <!-- Display loss ratio virtual field -->
                    <td class="action-buttons">
                        <a href="/characters/<%= character._id %>/edit">Edit</a> 
                        <form action="/characters/<%= character._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this character?');">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Create New Character Button -->
    <a href="/characters/new" class="btn">Create New Character</a>

    <%- include('./partials/footer') %>  <!-- Include the footer partial -->
</body>
</html>
